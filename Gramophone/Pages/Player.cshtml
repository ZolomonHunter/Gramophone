<div class="player">
    <div class="container">
        <div class="player-items">
            <div class="about-music">
                <div class="music-img">
                    <img src="images/play-now-music/faded.png" alt="" />
                </div>
                <div class="music-desc">
                    <div class="track-name">Название трека</div>
                    <div class="track-artist">Имя артиста</div>
                </div>
            </div>

            <div class="like"><img src="images/playlists/image 11.png" alt=""></div>
            <div class="dislike"><img src="images/playlists/image 13.png" alt=""></div>
            <div class="add"><img src="images/playlists/image 14.png" alt=""></div>

            <div class="player-base">
                <div class="buttons but-pos">
                    <div class="random-track" onclick="randomTrack()">
                        <i class="fas fa-random fa-2x" title="random"></i>
                    </div>
                    <div class="prev-track" onclick="prevTrack()">
                        <i class="fa fa-step-backward fa-2x"></i>
                    </div>
                    <div class="playpause-track" onclick="playpauseTrack()">
                        <i class="fa fa-play-circle fa-3x"></i>
                    </div>
                    <div class="next-track" onclick="nextTrack()">
                        <i class="fa fa-step-forward fa-2x"></i>
                    </div>
                    <div class="repeat-track" onclick="repeatTrack()">
                        <i class="fa fa-repeat fa-2x" title="repeat"></i>
                    </div>
                </div>
                <div class="slider_container slider-pos">
                    <div class="current-time">00:00</div>
                    <input type="range"
                           min="1"
                           max="100"
                           value="0"
                           class="seek_slider"
                           onchange="seekTo()" />
                    <div class="total-duration">00:00</div>
                </div>
            </div>

            <div class="albom">
                <a href="">
                    <img src="images/playlists/free-icon-playlist-2908602.png"
                         alt="" />
                </a>
            </div>

            <div class="slider_container">
                <i class="fa fa-volume-down"></i>
                <input type="range"
                       min="1"
                       max="100"
                       value="99"
                       class="volume_slider"
                       onchange="setVolume()" />
                <i class="fa fa-volume-up"></i>
            </div>
        </div>
    </div>
    <button id="close">
        <img src="images/playlists/free-icon-crossed-4219073.png"
             alt=""
             class="close-player" />
    </button>
</div>