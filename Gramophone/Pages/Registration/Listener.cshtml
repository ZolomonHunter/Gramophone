@page
@model Gramophone.Pages.Registration.ListenerModel

<section>
    <div class="container">
        <div class="reg-actor reg-listener">
            <div class="reg-title">Регистрация слушателя</div>
            <div class="reg-actor-wrap">
                <div class="img-reg-actor">
                    <img src="~/images/listener-reg.png" alt="" />
                </div>
                <form method="post">
                    <div class="form-item">
                        <label for="login"><b>Логин</b></label>
                        <input asp-for="Listener.Name" />
                        <span asp-validation-for="Listener.Name"></span>
                    </div>
                    <div class="form-item">
                        <label for="email"><b>Email</b></label>
                        <input asp-for="Listener.Email" />
                        <span asp-validation-for="Listener.Email" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label for="psw"><b>Пароль</b></label>
                        <input type="password" asp-for="Listener.Password" />
                        <span asp-validation-for="Listener.Password" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label for="psw-repeat"><b>Подтверждение пароля</b></label>
                        <input type="password" name="psw-repeat" asp-for="CheckPassword" />
                        <span asp-validation-for="CheckPassword"></span>
                    </div>
                    <button type="submit" class="registerbtn">
                        <div class="title-reg">Зарегистрироваться</div>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>