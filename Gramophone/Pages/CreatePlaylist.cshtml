@page
@model Gramophone.Pages.CreatePlaylistModel
@{
    <div class="player-nav">
        <div class="player-menu">
            <form action="" class="search">
                <div class="searching">
                    <input type="search"
                           placeholder="Sting"
                           class="search-field" />
                    <button><img src="images/search.png" alt="" class="search-icon" /></button>
                </div>
            </form>

            <div class="btn-menu">
                <a href="#">Моя музыка</a>
            </div>
            <div class="btn-menu">
                <a href="#">Рекомендации</a>
            </div>
            <div class="btn-menu">
                <a href="#">Новинки</a>
            </div>
            <div class="btn-menu">
                <a href="index.html">Главная</a>
            </div>
        </div>
    </div>

    <section class="my-playlists">
        <div class="container">
            <form action="" class="create-playlist">
                <div class="frame-playlists">
                    <div class="playlists-title">Создание нового плейлиста</div>
                    <hr />
                    <div class="desc-creation-playlist">
                        <label class="label-cover">
                            <i class="cover-icons">
                                <img class="add-playlist"
                                     src="images/my-playlists/image 47.png"
                                     alt="" />
                            </i>
                            <span class="title-cover">Добавить обложку</span>
                            <input type="file" />
                        </label>
                        <div class="text-input">
                            <label for="name-playlist">
                                <input type="text" placeholder="Название плейлиста" />
                            </label>
                            <label for="desc-playlist">
                                <input type="text" placeholder="Описание плейлиста" />
                            </label>
                        </div>
                    </div>
                    <hr>
                    <select name="add-music" id='openmodal'>
                        <option class="option-text">Добавить аудио</option>
                        <option class="option-text" value="openmodaloption1">Из плейлистов</option>
                        <option class="option-text" value="openmodaloption2">Из глобального поиска</option>
                    </select>
                    <div id="modal1" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Из плейлистов</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <ul class="playlist-modal" id="playlist-item">
                                        <li value='openmodalplaylist1'><a href="">Любимая музыка</a></li>
                                        <li><a href="">Для сна</a></li>
                                        <li><a href="">YAMAKASI</a></li>
                                        <li><a href="">Жить в кайф</a></li>
                                        <li><a href="">Planet Her</a></li>
                                        <li><a href="">Полный вперёд!</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div id="modal2" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Из глобального поиска</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <form action="" class="search">
                                        <div class="searching">
                                            <input type="search"
                                                   placeholder="Sting"
                                                   class="search-field" />
                                            <button><img src="images/search.png" alt="" class="search-icon" /></button>
                                        </div>
                                    </form>
                                    <div class="list-music">

                                        <div class="music-item">
                                            <div class="img">
                                                <img src="images/popular-music/shape.png" alt="" />
                                            </div>
                                            <div class="music-desc1">
                                                <div class="name">Shape of my heart</div>
                                                <div class="musician">Sting</div>
                                            </div>
                                            <div class="music-desc2">
                                                <div class="like"><img src="images/my-playlists/image 47.png" alt="" /></div>
                                                <div class="music-time">4:36</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <button type="submit" class="createbtn">
                        <div class="createbtn-text">Создать</div>
                    </button>
                </div>
            </form>
        </div>
    </section>
}
